{
  "name": "switchfast",
  "version": "0.1.0-beta.1",
  "description": "Desktop app to manage application focus by grouping them under themes",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:electron\" \"npm run watch:react\"",
    "dev:native": "concurrently \"npm run build:addon\" \"npm run watch:electron\" \"npm run watch:react\"",
    "build": "tsc && webpack --config webpack.config.js",
    "build:full": "npm run build:addon && npm run build",
    "build:addon": "node-gyp rebuild",
    "watch:electron": "tsc -w",
    "watch:react": "webpack --config webpack.config.js --watch",
    "package": "npx electron-builder build --win",
    "build:prod": "cross-env ACTIVE_ENVIRONMENT=prod npm run build:full",
    "package:prod": "npx electron-builder build --win -c.extraMetadata.environment=prod -c.extraMetadata.prodStripeSecretKey=$PROD_STRIPE_SECRET_KEY -c.extraMetadata.prodStripePriceId=$PROD_STRIPE_PRICE_ID",
    "release": "npm run build:prod && npm run package:prod",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "27.3.11",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.1",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^16.5.0",
    "electron-log": "^5.0.4",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "node-machine-id": "^1.1.12",
    "posthog-node": "^4.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^18.2.1",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.switchfast.app",
    "productName": "switchfast",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SebSte85",
        "repo": "workfocusmanager"
      }
    ]
  }
}
